<div class="container" xmlns="http://www.w3.org/1999/html">
  <div class="row">
    <div class="span6">


      <p>Juice List</p>
      <hr>
      <div class="well">
        <%= form_for @new_juice, :url => {:action => "add"} do |f| %>
            <%= f.text_field :name, :autofocus => true, :placeholder => "Enter Name"%></br>
            <%= f.text_field :price, :placeholder => "Enter Price" %></br>
            <%= f.submit "Add Juice", class: "btn btn-primary" %>
        <% end %>


        <% if flash[:error] %>
            <div class="alert alert-error">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <strong><%= flash[:error] %></strong>
            </div>
        <% end %>

        <% if flash[:success] %>
            <div class="alert alert-success">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <strong><%= flash[:success] %></strong>
            </div>
        <% end %>

        <table class="table">
          <thead class="well">
          <tr>
            <th>Name</th>
            <th>Price</th>
          </tr>
          <tbody>
          <% @juices.each do |juice| %>
              <tr>
                <td><%= juice.name %></td>
                <td><%= juice.price %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>